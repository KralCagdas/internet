@{
    Layout = "_LayoutAdmin";
}
@section CardHeader {
    <span>İlan Sil</span>
}
@model ProductModel

<h4>@Model.Name adlı ilanı kaldırmak istediğinize emin misiniz?</h4>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
    <a asp-action="Index" class="btn btn-primary btn-sm">Vazgeç</a>
</form>
