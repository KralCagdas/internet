@{
    Layout = "_LayoutAdmin";
}
@model ProductModel
@section CardHeader{
    <span>İlanı Düzenle</span>
}


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">

            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label for="City">Şehir</label>
                <select asp-for="City" class="form-control" asp-items="ViewBag.Cities">
                    <option value="">Şehir Seçin</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="CategoryId"> </label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="mb-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label for="PhotoUrl">Fotoğraf</label>
                <input asp-for="PhotoUrl" type="file" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>

            <div class="mb-2">

                <input asp-for="IsActive" class="form-check-inline" />
                <label asp-for="IsActive"></label>
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
