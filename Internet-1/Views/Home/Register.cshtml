@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <div class="card-body">
            <h3 class="text-center text-success mb-3" style="font-weight: 600;">Hesap Oluştur</h3>
            <p class="text-center text-muted mb-3" style="font-size: 14px;">Emlak Portalı'nda hesabınızı oluşturun ve fırsatlardan yararlanın.</p>
            <form method="post" asp-action="Register" asp-controller="Home" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <input type="text" name="fullName" class="form-control rounded-pill p-2 fs-6" placeholder="Ad-Soyad" required>
                </div>
                <div class="form-group mb-3">
                    <input type="text" name="username" class="form-control rounded-pill p-2 fs-6" placeholder="Kullanıcı Adı" required>
                </div>
                <div class="form-group mb-3">
                    <input type="email" name="email" class="form-control rounded-pill p-2 fs-6" placeholder="E-posta" required>
                </div>
                <div class="form-group mb-3">
                    <input type="password" name="password" class="form-control rounded-pill p-2 fs-6" placeholder="Şifre" required>
                </div>
                <div class="form-group mb-3">
                    <input type="password" name="confirmPassword" class="form-control rounded-pill p-2 fs-6" placeholder="Şifre (Tekrar)" required>
                </div>
                
                <button type="submit" class="btn btn-success btn-block w-100 rounded-pill p-2 fs-6" style="font-weight: 600;">Kayıt Ol</button>
            </form>
            <div class="mt-3 text-center">
                <p class="text-muted" style="font-size: 14px;">Zaten bir hesabınız var mı? <a href="/Home/Login" class="text-success fw-bold">Giriş Yap</a></p>
            </div>
        </div>
    </div>
</div>
